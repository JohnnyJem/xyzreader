<resources>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#3949AB</item>
        <item name="colorAccent">#00B0FF</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.TextAppearance.GridItem" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/grid_item_title_text_size</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="AppTheme.TextAppearance.GridItem.Subtitle" parent="AppTheme.TextAppearance.GridItem">
        <item name="android:textSize">@dimen/grid_item_subtitle_text_size</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="AppTheme.TextAppearance.GridItem.Date" parent="AppTheme.TextAppearance.GridItem">
        <item name="android:textSize">@dimen/grid_item_date_text_size</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="AppTheme.TextAppearance.DetailFragText.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/detail_title_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="AppTheme.TextAppearance.DetailFragText.Subtitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/detail_subtitle_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="AppTheme.TextAppearance.DetailFragText.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/detail_body_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorLink">#00B0FF</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>


</resources>
