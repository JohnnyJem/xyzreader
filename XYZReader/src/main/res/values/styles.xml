<resources>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/xyz_primary</item>
        <item name="colorPrimaryDark">@color/xyz_primary_dark</item>
        <item name="colorAccent">@color/xyz_accent</item>
    </style>

    <style name="AppTheme.TextAppearance.GridItem" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/card_title</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="AppTheme.TextAppearance.GridItem.Subtitle" parent="AppTheme.TextAppearance.GridItem">
        <item name="android:textSize">@dimen/category_item_sub_title_text_size</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="GreyText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#666666</item>
    </style>
</resources>